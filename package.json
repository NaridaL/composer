{
  "name": "composer",
  "version": "0.0.1",
  "description": "iPlug2 audio plug-in project manager",
  "main": "./dist/main.bundle.js",
  "scripts": {
    "start": "electron ./dist/main.bundle.js",
    "dev": "rimraf dist && cross-env NODE_ENV=development webpack --watch --progress --colors",
    "prod": "rimraf dist && cross-env NODE_ENV=production webpack",
    "test": "mocha -r ts-node/register -r tsconfig-paths/register \"test/**/*.ts\"",
    "build:win": "electron-builder build --win --x64 --publish never",
    "build:mac": "electron-builder build --mac --x64 --publish never"
  },
  "build": {
    "appId": "com.github.alexliesenfeld.composer",
    "productName": "Composer",
    "artifactName": "Composer-${version}.${ext}",
    "directories": {
      "app": "./dist/",
      "output": "./out/"
    },
    "mac": {
      "target": "pkg",
      "icon": "public/icon.png"
    },
    "win": {
      "target": "nsis",
      "asar": false,
      "icon": "public/icon.png"
    },
    "buildVersion": "1.0.0"
  },
  "author": "Alexander Liesenfeld",
  "license": "MIT",
  "dependencies": {
    "@blueprintjs/select": "^3.12.1",
    "@types/adm-zip": "^0.4.33",
    "@types/mv": "^2.1.0",
    "@types/request": "^2.48.4",
    "adm-zip": "^0.4.14",
    "mobx": "^5.15.4",
    "mobx-persist": "^0.4.1",
    "mobx-react": "^6.2.2",
    "mv": "^2.1.1",
    "npm-check-updates": "^4.1.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.1.2",
    "request": "^2.88.2",
    "sass": "^1.26.3",
    "sass-loader": "^8.0.2"
  },
  "devDependencies": {
    "@blueprintjs/core": "^3.25.0",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/mocha": "^7.0.2",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "@types/react-router-dom": "^5.1.4",
    "acorn": "^7.1.1",
    "ajv": "^6.12.1",
    "copy-pkg-json-webpack-plugin": "0.0.38",
    "cross-env": "^7.0.2",
    "css-loader": "^3.5.2",
    "electron": "^8.2.3",
    "electron-builder": "^22.5.1",
    "electron-devtools-installer": "^3.0.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-import-resolver-webpack": "^0.12.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.2.0",
    "lodash": "^4.17.15",
    "mocha": "^7.1.1",
    "rimraf": "^3.0.2",
    "source-map-loader": "^0.2.4",
    "spectron": "^10.0.1",
    "style-loader": "^1.1.4",
    "ts-loader": "^7.0.0",
    "ts-node": "^8.8.2",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.1",
    "tslint-microsoft-contrib": "^6.2.0",
    "typescript": "^3.8.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexliesenfeld/composer"
  },
  "keywords": [
    "boilerplate",
    "Electron",
    "React",
    "Typescript",
    "Webpack"
  ],
  "bugs": {
    "url": "https://github.com/alexliesenfeld/composer/issues"
  }
}
